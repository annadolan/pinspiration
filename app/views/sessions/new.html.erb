<div class="container">
  <div class ="row">
    <div class = "text-center">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
      <div class="panel panel-default">
      <div class="panel-heading panel-bg">
        Pinspiration
      </div>
      <div class="panel-body">
  <form>
    <h2>Log in to see more</h2>

    <%= form_tag login_path, method: :post, class: "form-group" do %>
    <div class="form-group">
      <p><%= text_field_tag :email, params[:email], class: "form-control", placeholder: "Email" %></p>
    </div>
    <div class="form-group">
      <p><%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %></p>
    </div>
    <button type="submit" class="btn btn-danger">Login</button></p>
    <% end %><br>

    <br>
  </form>
  <%= link_to "Forgot your password?", "/" %>
  <hr>
  Need an account? <%= link_to "Sign Up", new_user_path %>
</div>
</div>
</div>
<div class="col-md-4">
</div>
</div>
</div>
