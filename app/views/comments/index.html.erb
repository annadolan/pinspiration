<div class="container">

<h2>Comments</h2>

<% @comments.each do |comment| %>
  <%= comment.content  %><br>
  <%= link_to "Edit Comment", edit_comment_path(comment) %>
  <%= link_to "Delete Comment", comment_path(comment), method: "delete" %><br>
  <% end %>
<br>
<%= link_to "New Comment", new_comment_path %>

</div>
